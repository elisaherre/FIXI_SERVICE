

  <!--banner-->

  <div class="banner mx-4 mt-3 mb-3 rounded-5 cajita-banner"
  style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)),
  url(<%= asset_path 'banner2.jpg' %>);">
    <div class="container text-right titulo-banner">
      <h1> <strong>DEJA EN MANOS DE EXPERTOS</strong></h1>
      <h1> <strong>EL CUIDADO DE TU HOGAR</strong></h1>
      <p>Encuentra al tuyo a solo un clic.</p>
      <!-- <a class="btn mt-3 pr-5 btn-fixi" href="#">Contactanos</a> -->
    </div>

    <form class="banner-search">
      <select name="categoria" class="banner-search-category">
        <!-- Añade las opciones de categoría aquí, por ejemplo: -->
        <option value="Categoria1">Categoria 1</option>
        <option value="Categoria2">Categoria 2</option>
      </select>
      <select name="avaluacion" class="banner-search-avaluacion">
        <!-- Añade las opciones de avaluación aquí, por ejemplo: -->
        <option value="5">5 estrellas</option>
        <option value="4">4 estrellas</option>
      </select>
      <input type="text" name="query" class="banner-search-input" placeholder="Buscar...">
      <button type="submit" class=" btn-fixi">Buscar</button>
    </form>

    <img src="<%= asset_path 'destello.svg' %>" alt="Descripción de la imagen 1" class="banner-image banner-image1">
    <img src="<%= asset_path 'arrow.svg' %>" alt="Descripción de la imagen 1" class="banner-image banner-image2">
    <img src="<%= asset_path 'chips.svg' %>" alt="Descripción de la imagen 1" class="banner-image banner-image3">

  </div>

  <!-- Termino banner-->





  <!--Informacion-->
  <div class="container fondo-principal">
    <div class="row d-flex justify-content-between">
      <!-- Primera columna -->
      <div class="col align-items-center">
          <img src="<%= asset_path 'carpinteria.jpg' %>" alt="Imagen 1" class=" img-capsula">
      </div>

      <!-- Segunda columna -->
      <div class="col align-items-center text-center text-grande">
