<div class="container p-5" style="min-height: 700px;">
  <div class="row justify-content-center">
    <h2 class="text-center">MIS SERVICIOS</h2>
    <div class="col-6">
      <% @services.each do |service| %>
        <div class="card-product">
          <%= cl_image_tag(service.category.photo.key,
                      :class=>'card-product-img') %>
          <div class="card-product-infos">
            <h2><%= service.category.name.capitalize %></h2>
            <p><%= service.description %></p>
            <p>Fecha de creación: <%= service.created_at.strftime("%d/%m/%y") %></p>
            <p>Fecha de última actualización: <%= service.updated_at.strftime("%d/%m/%y") %></p>
          </div>
            <%= link_to '<i class="fa-solid fa-trash "></i>'.html_safe, service_path(service),
                method: "delete",
                class: "position-icon fs-7",
                data: {turbo_method: :delete, turbo_confirm: "¿Seguro que quieres borrar este producto?"} %>
        </div>
      <% end %>
      <div class="row justify-content-center">
        <div class="col-6 text-center">
          <%= link_to "Ofrecer nuevo servicio", new_service_path, class: "btn btn-fixi mt-3 align-self-center" %>
        </div>
      </div>
    </div>
  </div>
</div>
