<div>
  <h1><%= @category.name.capitalize %></h1>
    <div>
      <% if @fixers.size > 0 %>
        <% @fixers.each do |fixer| %>
          <% if fixer.photo.attached? %>
          <%= image_tag(fixer.photo, height: 50, width: 50, crop: :fill) %>
          <% end %>
        <%= fixer.name %>
        <% end %>
      <% else %>
        <p>No hay fixers en esta categor√≠a</p>
      <% end %>
    </div>
</div>
