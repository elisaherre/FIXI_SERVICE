<div class="container mt-5">
<div class="row">
  <div class="col-5">
  <%= image_tag @fixer.photo, crop: :fill, class: "filtro redondeada imagen-fixer" %>
  </div>
  <div class="col fondo-profile redondeada p-4">
    <div class="row mb-2">
      <div class="col-7">
        <div class="row">
          <div class="col">
            <h1 class="estilo-titulo"><%= @fixer.name %></h1>
          </div>
          <div class="col">
            <i class="fa-solid fa-circle-info" data-controller="tooltip" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Fixer desde: <%= @fixer.created_at.strftime('%m/%Y')%> Trabajos realizados: <%= @completed %>"></i>
          </div>
        </div>
      </div>
      <div class="col-5">
        <h2><%= @average %> estrellas</h2>
      </div>
    </div>
  <div class="">
  <ul class="nav nav-pills">
    <% id = 0 %>
    <% @services.each do |service| %>
      <li class="nav-item">
        <a class="nav-link" aria-current="page" href="#" id=<%= id += 1 %>><%= service.category.name.capitalize %></a>
      </li>
    <% end %>
  </ul>
    <% for number in (1..id) %>
      <div class="tab-content">
        <div class="tab-pane fade show <% id == number ? "active" : "fade" %>" id=<%= number %>>
          <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Veniam cumque quae deleniti quas dicta reprehenderit, ab odio dolorum itaque repellat, quisquam sunt ipsam fugiat doloribus eos perferendis est aliquid exercitationem.</p>
        </div>
      </div>
    <% end %>
  </div>


    <div class="row">
      <div class= "col-12 d-flex justify-content-end">
      <%= link_to "Solicitar",  new_request_path, class: "btn btn-fixi" %>
    </div>
    </div>
  </div>
  </div>
</div>
</div>

<div class="separador-reviews">
  REVIEWS
</div>

<div class="container mt-5">
  <% if @reviews.size > 0 %>
  <% @reviews.each do |review|  %>
    <div class="card card-review mt-4">
      <div class="card-header header-review d-flex">
        <h5 class="m-2"><%= review.user.name %></h5>
        <p class="m-2 "><%= review.request.service.category.name.capitalize %></p>
        <p class="m-2"><%= review.created_at.strftime('%d/%m/%Y') %></p>
      </div>
      <div class="card-body">
        <h5 class="card-title align-self-center m-0">Rating <%= review.rating %></h5>
        <% if review.content %>
          <p class="card-text"><%= review.content %></p>
        <% end %>
      </div>
    </div>
    <% end %>
    <% else %>
    <h3 class="my-5">Sin reviews</h3>
  <% end %>
</div>
