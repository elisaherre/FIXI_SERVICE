<div class="fondo-page" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(<%= asset_path 'gradegrey.jpg' %>);">
  <div class="container d-flex justify-content-center p-5">

    <div class ="profile-show-card" style="min-width: 75%">

      <h3 class="text-center mb-5 fw-light"> <span class="fw-bold">EDITAR</span> INFORMACIÓN</h3>
      <div class="col d-flex flex-column">
        <div class="text-center">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

          <div class="form-inputs">

            <div class="row justify-content-center">

              <div class="col-7 text-start">
                <%= f.input :name, autofocus: true, label: 'Nombre' %>
                <%= f.input :address, autofocus: true, label: 'Dirección' %>
                <%= f.input :email, required: true, autofocus: true, label: 'Correo electrónico' %>
                <%= f.input :current_password,
                hint: "",
                required: true,
                input_html: { autocomplete: "current-password" },
                label: 'Contraseña' %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Esperando confirmación: <%= resource.unconfirmed_email %></p>
                <% end %>
              </div>

            </div>

          </div>

          <div class="d-flex m-3 justify-content-center">
            <%= f.button :submit, "Actualizar", class: "btn btn-fixi pe-3 ps-3" %>
            <%= link_to "Cancelar", :back, class: "btn btn-fixi pe-3 ps-3 ms-3"%>
          </div>

          <div>
          <p class="text-secondary">¿Te cansaste de nosotros?</p>
            <%= link_to "Cerrar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-secondary" %>
          </div>

          <% end %>
        </div>
      </div>


    </div>

  </div>
</div>
